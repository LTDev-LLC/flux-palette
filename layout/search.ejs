<section class="post-index search-page">
  <h1 class="post-title"><%= page.title || 'Search' %></h1>
  <div class="search-box">
    <div class="search-input-wrapper">
      <input type="text" id="local-search-input" placeholder="Enter search keywords" autocomplete="off">
      <button type="button" id="local-search-clear" class="search-clear-btn" aria-label="Clear search">
        &times;
      </button>
    </div>
  </div>
  <div id="local-search-results" class="search-results"></div>
  <template id="local-search-result-template">
    <article class="post-card search-result">
      <h2 class="post-title">
        <a class="result-link"></a>
        <span class="result-lock" hidden>
          <%- partial('partial/lock') %>
        </span>
      </h2>
      <div class="post-meta">
        <span class="result-type"></span>
        <span class="meta-sep" hidden>-</span>
        <time class="result-date"></time>
      </div>
      <div class="post-excerpt result-excerpt"></div>
    </article>
  </template>
</section>
<script src="<%= url_for('/js/local-search.js') %>"></script>